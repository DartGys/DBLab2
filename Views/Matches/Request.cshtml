@{
    ViewData["Title"] = "Request";
}

<h1>Запит чемпіонати</h1>



<h4>Знайти хоча б один матч, в якому кількість забитих голів більше заданого параметру</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            @using (Html.BeginForm("MatchRequest", "Matches", new { id = ViewBag.ChampionshipId }))
            {
                <p>
                    <label>Кількість забитих голів</label><br />
                    @Html.TextBox("quantity","", new { type="number" })
                </p>
                <p>
                    <input type="submit" class="btn btn-primary mt-1 mb-1" style="font-size:12px; padding:5px 7px; border-radius: 10px" value="Запит" />
                </p>
            }
        </div>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary mt-1 mb-1" style="font-size:12px; padding:5px 7px; border-radius: 10px">Назад до списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
